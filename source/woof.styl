blue = #25aff4
orange = #f90

scratch-logo = 'https://scratch.mit.edu/images/logo_sm.png'
messages = 'https://scratch.mit.edu/images/nav-notifications.png'
mystuff = 'https://scratch.mit.edu/images/mystuff.png'
dropdown = 'https://scratch.mit.edu/images/dropdown.png'
search = 'https://scratch.mit.edu/images/nav-search-glass.png'

// new scratch
body.woof-new
  #navigation
    border-bottom none
    
    .logo a
      transition none
      background-size 81px !important

// old scratch
body.woof
  background white
  color black
  height auto
  min-height 100%
  font-family Helvetica Neue, Helvetica, Arial, sans-serif
  
  .avatar img
    border-radius 3px

  #content
    padding-top 6em

  // navbar
  #topnav
    box-shadow none
    height 51px
    user-select none
    position fixed
    box-shadow 0 0 3px rgba(0,0,0,.25)
    
    .innerwrap
      height 100%
      background-color blue
      
      .container
        height 100%
        width 942px
        margin 0 auto
        
        li
          border none
          height 51px
          line-height @height
          background transparent

          &:hover
            background rgba(black, 0.1)

        > a, .site-nav > a, .account-nav > li > a
          position relative
          border none
          font-weight 500
          color white
          font-size 14px
          margin 0
          padding 17px 15px 0
          height 33px
          line-height 1
          font-weight 700
        
        .logo
          //height 51px
          width 80px
          flex-shrink 0
          
          background-image url(scratch-logo)
          background-repeat no-repeat
          background-size 81px
          background-position center
          padding-left 4px
          padding-right 4px
          
          span
            display none
    
      .account-nav
        margin 0
        height 51px
        
        .logged-in-user.open
          background-color transparent !important
        
        &.logged-in > li
          .dropdown-menu
            background-color blue
            margin-top 25px
            box-shadow none
            
            li, li > a
              height 36px
              line-height 36px
              
              form input[type=submit]
                background-color transparent

          > .messages-icon
            background url(messages) no-repeat center
            background-size 24px
            padding-left 0
            padding-right 0
          
          > .mystuff-icon
            background url(mystuff) no-repeat center
            background-size 24px
            padding-left 0
            padding-right 0

          .notificationsCount
            line-height 17px
            margin-top 4px
            
          .user-icon
            border none
            border-radius 3px

          .caret
            border none
            background url(dropdown) no-repeat center
            height 20px
            width 20px
            margin-left 8px
            background-size 50%
            opacity 1


    form.search
      margin 0 20px

      .glass
        position absolute
        background-color transparent
        background-image url(search)
        background-repeat no-repeat
        background-position center
        background-size 14px 14px
        width 40px
        border none
        box-shadow none
        margin-top 5px
        cursor pointer
        height 40px
      
      #search-input
        transition .15s ease background-color
        padding 0
        padding-right 10px
        padding-left 40px
        width calc(100% - 50px)
        height 40px
        color #fff
        font-size 14px
        outline none
        display inline-block
        margin .5em 0
        margin-top 5px
        box-shadow none
        border none
        background-color rgba(black, 0.1)
        border-radius 5px
        width 197.28px
        flex-grow 0
        
        &:focus
          background-color rgba(black, 0.2)
        
      ::placeholder
        color hsla(0,0%,100%,.75)
  
  // content

  a:not(.button), input.link
    cursor pointer
    color blue
    
    &:hover
      text-decoration none
  
  .user.thumb img
    border none
    border-radius 3px

  .avatar
    border-radius 3px
  
  .box .box-head, h2, h3, h4, h1
    color #6b6b6b
  
  .button, .button.grey
    border none
    background-image none
    background-color orange
    border-radius 3px
    box-shadow 1px 1px 0 rgba(black, 0.1)
    outline none
    color white !important
    
    a
      color white

    &:focus, &:active
      box-shadow none

    &:hover
      background-color shade(orange, 10%)
    
    &.blue
      background-color blue
      
      &:hover
        background-color shade(blue, 10%)