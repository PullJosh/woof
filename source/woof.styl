blue = #25aff4
orange = #f90

scratch-logo = 'https://scratch.mit.edu/images/logo_sm.png'
messages = 'https://scratch.mit.edu/images/nav-notifications.png'
mystuff = 'https://scratch.mit.edu/images/mystuff.png'
dropdown = 'https://scratch.mit.edu/images/dropdown.png'
search = 'https://scratch.mit.edu/images/nav-search-glass.png'

// new scratch
body.woof-new
  #navigation
    border-bottom none
    
    .logo a
      transition none
      background-size 81px !important
      
    .link a span
      font-weight 400
      font-size 14px
    
    .mystuff > a, .messages > a
      background-size 24px !important

// old scratch
body.woof:not(.editor)
  background white
  color black
  height auto
  min-height 100%
  
  .avatar img
    border-radius 3px

  #content
    padding-top 6em

  // navbar
  #topnav
    box-shadow none
    height 51px
    user-select none
    position fixed
    box-shadow 0 0 3px rgba(0,0,0,.25)
    
    .innerwrap
      height 100%
      background-color blue
      
      .container
        height 100%
        width 942px
        margin 0 auto
        
        li
          border none
          height 51px
          line-height @height
          background transparent

          &:hover
            background rgba(black, 0.1)

        > a, .site-nav > li > a, .account-nav > li > a
          position relative
          border none
          font-weight 500
          color white
          font-size 14px
          margin 0
          padding 17px 15px 0
          height 33px
          line-height 1
          font-weight 400
        
        .logo
          //height 51px
          width 80px
          flex-shrink 0
          
          background-image url(scratch-logo)
          background-repeat no-repeat
          background-size 81px
          background-position center
          padding-right 16px
          
          span
            display none
    
      .account-nav
        margin 0
        height 51px
        
        .logged-in-user.open
          background-color transparent !important
        
        &.logged-in > li
          .dropdown-menu
            background-color blue
            margin-top 25px
            box-shadow none
            
            li, li > a
              height 36px
              line-height 36px
              
              form input[type=submit]
                background-color transparent

          > .messages-icon
            background url(messages) no-repeat center
            background-size 24px
            padding-left 10px
            width 30px
            padding-right 10px
          
          > .mystuff-icon
            background url(mystuff) no-repeat center
            background-size 24px
            padding-left 10px
            padding-right 10px
            width 30px

          .notificationsCount
            line-height 17px
            margin-top 4px
            
          .user-icon
            border none
            border-radius 3px
            margin-top 3px

          .caret
            border none
            background url(dropdown) no-repeat center
            height 20px
            width 20px
            margin-left 8px
            background-size 50%
            opacity 1


    form.search
      margin 0 20px

      .glass
        position absolute
        background-color transparent
        background-image url(search)
        background-repeat no-repeat
        background-position center
        background-size 14px 14px
        width 40px
        border none
        box-shadow none
        margin-top 5px
        cursor pointer
        height 40px
      
      #search-input
        transition .15s ease background-color
        padding 0
        padding-right 10px
        padding-left 40px
        //width calc(100% - 50px)
        height 40px
        color #fff
        font-size 14px
        outline none
        display inline-block
        margin .5em 0
        margin-top 5px
        box-shadow none
        border none
        background-color rgba(black, 0.1)
        border-radius 5px
        width 147.281px
        flex-grow 0
        
        &:focus
          background-color rgba(black, 0.2)
        
      ::placeholder
        color hsla(0,0%,100%,.75)
  
  // content

  a:not(.button), input.link
    cursor pointer
    
    &:hover
      text-decoration none
  
  .user.thumb img
    border none
    border-radius 3px

  .avatar
    border-radius 3px
  
  .box .box-head, h2, h3, h4, h1, .sub-list a, #tabs a
    color #6b6b6b
    font-weight 200
    
  .box
    box-shadow none

  #tabs
    user-select none
    
    .active
      background-color blue
      text-shadow none
      
      a
        color white !important
        text-shadow none

  .dropdown .dropdown-menu li
    color black

  .button, .button.grey, button
    border none
    user-select none
    background-image none
    background-color #607d8b
    border-radius 3px
    outline 0
    box-shadow 0 2px 5px 0 rgba(0,0,0,0.16),0 2px 10px 0 rgba(0,0,0,0.12)
    color white !important
    text-transform capitalize
    text-shadow none
    padding 0 1rem
    transition box-shadow .3s ease-out
    
    span.dropdown-toggle.black span.caret
      border-top 4px solid white
     
    span.black
      color white
      filter brightness(10)

    &[data-control="load-more"]
      margin-bottom 20px

    &.small
      padding 0 .5rem

    a, span
      color white
      letter-spacing .1px

    &:focus, &:active
      box-shadow none

    &:hover
      box-shadow 0 5px 11px 0 rgba(0,0,0,0.18),0 4px 15px 0 rgba(0,0,0,0.15)
    
    &.blue, &#see-inside, &[data-control='post'], &[data-control="edit"]
      background-color blue
    
    &#see-inside
      padding-left .5rem
      padding-right .5rem

    &.orange, &#share, &[href="/projects/editor/"]
      background-color orange
    
  #share-bar
    border 1px solid rgba(orange, 0.3)
    background-color rgba(orange, 0.2)
    font-weight 400

// both scratches
body.woof, body.woof-new
  font-family Helvetica Neue, Roboto, Fira Sans, Helvetica, Arial, sans-serif
  
  ::selection
    color white
    background-color orange
  
  .comment.removed
    display none
  
  .reply[style="display: list-item;"]
    display none !important
    
  *
    text-shadow none !important